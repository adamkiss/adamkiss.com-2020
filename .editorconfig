root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml,njk}]
indent_size = 2

[*.{yml,yaml,njk,md}]
indent_style = space

[package.json]
indent_style = space

[*.{njk,pug,md,yml,yaml}]
trim_trailing_whitespace = false
