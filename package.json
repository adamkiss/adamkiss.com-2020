{
    "name": "adamkiss.com",
    "version": "1.0.0",
    "description": "My website.",
    "main": "eleventy/index.js",
    "config": {
        "host": 3000,
        "port": 3000,
        "dir": "__build__"
    },
    "scripts": {
        "clean:assets": "rm -rf site/assets/*",
        "clean:dist": "rm -fr ${npm_package_config_dir}",
        "-- manifest": "                                              ",
        "manifest:dev": "NODE_ENV=development hash-and-manifest empty",
        "manifest:prod": "NODE_ENV=production hash-and-manifest",
        "-- watch": "                                              ",
        "watch:11": "eleventy --config=eleventy/index.js --quiet --watch --serve --port=${npm_package_config_port}",
        "watch:css": "postcss assets/*.css --dir site/assets/dev -w",
        "__watch:js": "esbuild --bundle --watch --sourcemap assets/*.js --outdir=site/assets/dev",
        "watch": "NODE_ENV=development run-p watch:*",
        "-- build": "                                              ",
        "build:11": "NODE_ENV=production eleventy --config=eleventy/index.js",
        "build:css": "postcss assets/*.css -d site/assets/dist",
        "build:js": "esbuild --bundle --target=es5 --minify assets/*.js --outdir=site/assets/dist",
        "build:assets": "NODE_ENV=production run-p build:css",
        "--": "                                              ",
        "start": "run-s manifest:dev clean:assets watch",
        "prod": "run-s clean:* && run-s build:assets manifest:prod build:11",
        "-- ": "                                              ",
        "open": "open http://localhost:${npm_package_config_port}/"
    },
    "author": "Adam Kiss (https://adamkiss.com)",
    "license": "unlicensed",
    "private": true,
    "devDependencies": {
        "@11ty/eleventy": "^0.12.1",
        "autoprefixer": "^10.2.5",
        "cssnano": "^5.0.1",
        "csv-parse": "^4.15.4",
        "diacritics": "^1.3.0",
        "esbuild": "^0.11.11",
        "hash-and-manifest": "^1.0.0",
        "luxon": "^1.25.0",
        "markdown-it": "^12.0.6",
        "markdown-it-attrs": "^4.0.0",
        "npm-run-all": "~4.1.5",
        "postcss": "^8.2.10",
        "postcss-cli": "^8.3.1",
        "postcss-import": "^14.0.1",
        "postcss-nested": "^5.0.5",
        "tailwindcss": "^2.1.1"
    },
    "homepage": "https://adamkiss.com/"
}
